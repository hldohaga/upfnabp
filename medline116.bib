  author = {Psota, Marek and Bandosz, Piotr and Goncalvesova, Eva and Avdicova, Maria and Bucek Psenkova, Maria and Studencan, Martin and Pekarcikova, Jarmila and Capewell, Simon and O'Flaherty, Martin},
