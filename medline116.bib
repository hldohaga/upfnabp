@article{johnChangeUSAdult2018,
  title = {Change in {{US Adult Consumer Knowledge}}, {{Attitudes}}, and {{Behaviors Related}} to {{Sodium Intake}} and {{Reduction}}: {{SummerStyles}} 2012 and 2015.},
  author = {John, Katherine A and Cogswell, Mary E and Zhao, Lixia and Tong, Xin and Odom, Erika C and Ayala, Carma and Merritt, Robert},
