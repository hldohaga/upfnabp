  shortjournal = {Arq Bras Cardiol},
  series = {Comment in: {{Arq Bras Cardiol}}. 2021 {{Oct}};117(4):637-638 {{PMID}}: 34709290 [{{https://www.ncbi.nlm.nih.gov/pubmed/34709290]}} {{Comment}} in: {{Arq Bras Cardiol}}. 2022 {{Sep}};119(3):502-504 {{PMID}}: 36074383 [{{https://www.ncbi.nlm.nih.gov/pubmed/36074383]}}},
