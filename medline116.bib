@article{barbosaUltraprocessedFoodConsumption2023,
  title = {Ultra-Processed Food Consumption and Metabolic Syndrome: A Cross-Sectional Study in {{Quilombola}} Communities of {{Alagoas}}, {{Brazil}}.},
