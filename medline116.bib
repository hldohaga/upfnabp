@article{jaime-laraNoSignificantSalt2023,
  title = {No Significant Salt or Sweet Taste Preference or Sensitivity Differences Following Ad Libitum Consumption of Ultra-Processed and Unprocessed Diets: A Randomized Controlled Pilot Study.},
  author = {Jaime-Lara, Rosario B and Franks, Alexis T and Agarwal, Khushbu and Nawal, Nafisa and Courville, Amber B and Guo, Juen and Yang, Shanna and Brooks, Brianna E and Roy, Abhrarup and Taylor, Karen and Darcey, Valerie L and LeCheminant, James D and Chung, Stephanie and Forde, Ciaran G and Hall, Kevin D and Joseph, Paule V},
