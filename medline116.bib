@article{cappuccioCommunityProgrammeReduce2006,
  title = {A Community Programme to Reduce Salt Intake and Blood Pressure in {{Ghana}} [{{ISRCTN88789643}}].},
  author = {Cappuccio, Francesco P and Kerry, Sally M and Micah, Frank B and Plange-Rhule, Jacob and Eastwood, John B},
