@article{garciazozayaNormotensionDecreasedPlasma1989,
  title = {Normotension with Decreased Plasma Renin Activity and Low Serum Ionic Calcium Levels: A Prehypertensive State?.},
  author = {Garcia Zozaya, J L and Padilla Viloria, M and Castro, A},
  date = {1989},
  journaltitle = {Southern medical journal},
  shortjournal = {South Med J},
  volume = {82},
