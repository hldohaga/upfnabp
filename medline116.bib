  series = {Comment in: {{Nutrition}}. 2013 {{Nov-Dec}};29(11-12):1431 {{PMID}}: 23948340 [{{https://www.ncbi.nlm.nih.gov/pubmed/23948340]}} {{Comment}} in: {{Nutrition}}. 2013 {{Nov-Dec}};29(11-12):1431-3 {{PMID}}: 24035057 [{{https://www.ncbi.nlm.nih.gov/pubmed/24035057]}}},
