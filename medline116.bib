@article{paceRuralAfricanAmericans2008,
  title = {Rural {{African Americans}}' Dietary Knowledge, Perceptions, and Behavior in Relation to Cardiovascular Disease.},
  author = {Pace, Ralphenia and Dawkins, Norma and Wang, Baowu and Person, Sharina and Shikany, James M},
