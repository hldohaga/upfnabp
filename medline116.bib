  annotation = {Cobiac, Linda J. School of Population Health, The University of Queensland, Herston, Queensland, Australia. l.cobiac@uq.edu.au}
}

@article{colin-ramirezFoodSourcesSodium2017,
  title = {Food {{Sources}} of {{Sodium Intake}} in an {{Adult Mexican Population}}: {{A Sub-Analysis}} of the {{SALMEX Study}}.},
  author = {Colin-Ramirez, Eloisa and Espinosa-Cuevas, Angeles and Miranda-Alatriste, Paola Vanessa and Tovar-Villegas, Veronica Ivette and Arcand, JoAnne and Correa-Rotter, Ricardo},
  date = {2017},
