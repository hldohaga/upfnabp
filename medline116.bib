  annotation = {Stephens, Brandi Y. Department of Kinesiology, University of Texas at Arlington, Arlington, Arlington, Texas. Kaur, Jasdeep. Department of Kinesiology, University of Texas at Arlington, Arlington, Arlington, Texas. Vranish, Jennifer R. Department of Integrative Physiology and Health Science, Alma College, Alma, Michigan. Barbosa, Thales C. Department of Kinesiology, University of Texas at Arlington, Arlington, Arlington, Texas. Blankenship, Jeanette K. College of Nursing, University of Texas at Arlington, Arlington, Texas. Smith, Scott A. Department of Internal Medicine, University of Texas Southwestern Medical Center, Dallas, Texas. Smith, Scott A. Department of Health Care Sciences, University of Texas Southwestern Medical Center, Dallas, Texas. Fadel, Paul J. Department of Kinesiology, University of Texas at Arlington, Arlington, Arlington, Texas.}
}

@article{stradlingReviewDietaryInfluences2013,
