  author = {Cobiac, Linda J and Vos, Theo and Veerman, J Lennert},
  date = {2010},
  journaltitle = {Heart (British Cardiac Society)},
  shortjournal = {Heart},
  series = {Comment in: {{Heart}}. 2010 {{Dec}};96(23):1863-4 {{PMID}}: 21062774 [{{https://www.ncbi.nlm.nih.gov/pubmed/21062774]}} {{Comment}} in: {{Heart}}. 2011 {{Feb}};97(4):341-2; {{Author Reply}} 342 {{PMID}}: 21212135 [{{https://www.ncbi.nlm.nih.gov/pubmed/21212135]}}},
