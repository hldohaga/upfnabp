@article{ghaediEffectsPaleolithicDiet2019,
  title = {Effects of a {{Paleolithic Diet}} on {{Cardiovascular Disease Risk Factors}}: {{A Systematic Review}} and {{Meta-Analysis}} of {{Randomized Controlled Trials}}.},
  author = {Ghaedi, Ehsan and Mohammadi, Mohammad and Mohammadi, Hamed and Ramezani-Jolfaie, Nahid and Malekzadeh, Janmohamad and Hosseinzadeh, Mahdieh and Salehi-Abargouei, Amin},
  date = {2019},
  journaltitle = {Advances in nutrition (Bethesda, Md.)},
  shortjournal = {Adv Nutr (Bethesda)},
  series = {Expression of {{Concern}} in: {{Adv Nutr}}. 2020 {{Jan}} 1;11(1):181 {{PMID}}: 31841124 [{{https://www.ncbi.nlm.nih.gov/pubmed/31841124]}} {{Comment}} in: {{Adv Nutr}}. 2020 {{Jul}} 1;11(4):1047-1048 {{PMID}}: 32348451 [{{https://www.ncbi.nlm.nih.gov/pubmed/32348451]}} {{Comment}} in: {{Adv Nutr}}. 2020 {{Jul}} 1;11(4):1048-1050 {{PMID}}: 32348461 [{{https://www.ncbi.nlm.nih.gov/pubmed/32348461]}} {{Erratum}} in: {{Adv Nutr}}. 2020 {{Jul}} 1;11(4):1054 {{PMID}}: 32666106 [{{https://www.ncbi.nlm.nih.gov/pubmed/32666106]}}},
  volume = {10},
