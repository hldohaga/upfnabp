@article{chanBloodPressureInteractions2022,
  title = {Blood Pressure Interactions with the {{DASH}} Dietary Pattern, Sodium, and Potassium: {{The International Study}} of {{Macro-}}/{{Micronutrients}} and {{Blood Pressure}} ({{INTERMAP}}).},
  author = {Chan, Queenie and Wren, Gina M and Lau, Chung-Ho E and Ebbels, Timothy M D and Gibson, Rachel and Loo, Ruey Leng and Aljuraiban, Ghadeer S and Posma, Joram M and Dyer, Alan R and Steffen, Lyn M and Rodriguez, Beatriz L and Appel, Lawrence J and Daviglus, Martha L and Elliott, Paul and Stamler, Jeremiah and Holmes, Elaine and Van Horn, Linda},
