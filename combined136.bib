@article{difilippoDeterminingAdequacySodium1996,
  title = {Determining the Adequacy of Sodium Balance in Hemodialysis Using a Kinetic Model.},
  author = {Di Filippo, S and Corti, M and Andrulli, S and Manzoni, C and Locatelli, F},
  date = {1996},
  journaltitle = {Blood purification},
  shortjournal = {Blood Purif},
