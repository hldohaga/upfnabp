@article{mcdonoughCardiovascularBenefitsAssociated2017,
  title = {Cardiovascular Benefits Associated with Higher Dietary {{K}}+ vs. {{Lower}} Dietary {{Na}}+: {{Evidence}} from Population and Mechanistic Studies.},
  author = {McDonough, Alicia A and Veiras, Luciana C and Guevara, Claire A and Ralph, Donna L},
