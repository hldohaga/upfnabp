  title = {Ultra-Processed Food Consumption and Metabolic Syndrome: {{A}} Cross-Sectional Study in {{Quilombola}} Communities of {{Alagoas}}, {{Brazil}}.},
  author = {Barbosa, Lidia Bezerra and Vasconcelos, Nancy Borges Rodrigues and Dos Santos, Ewerton Amorim and Dos Santos, Tamara Rodrigues and Ataide-Silva, Thays and family=Silva Ferreira, given=Haroldo, prefix=da, useprefix=true},
