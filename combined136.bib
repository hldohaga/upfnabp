@article{farrandKnowYourNoodles2017a,
  title = {Know {{Your Noodles}}! {{Assessing Variations}} in {{Sodium Content}} of {{Instant Noodles}} across {{Countries}}.},
  author = {Farrand, Clare and Charlton, Karen and Crino, Michelle and Santos, Joseph and Rodriguez-Fernandez, Rodrigo and Ni Mhurchu, Cliona and Webster, Jacqui},
