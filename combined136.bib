@article{felixPrevalenceExcessSodium2022a,
  title = {Prevalence of {{Excess Sodium Intake}} and {{Their Corresponding Food Sources}} in {{Adults}} from the 2017-2018 {{Brazilian National Dietary Survey}}.},
  author = {Felix, Paula Victoria and De Castro, Michelle Alessandra and Nogueira-de-Almeida, Carlos Alberto and Fisberg, Mauro},
