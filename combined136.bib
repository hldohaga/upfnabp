  author = {family=Deus Mendonca, given=Raquel, prefix=de, useprefix=true and Lopes, Aline Cristine Souza and Pimenta, Adriano Marcal and Gea, Alfredo and Martinez-Gonzalez, Miguel Angel and Bes-Rastrollo, Maira},
  date = {2017},
  journaltitle = {American journal of hypertension},
  shortjournal = {Am J Hypertens},
  series = {Comment in: {{Am J Hypertens}}. 2017 {{Apr}} 1;30(4):348-349 {{PMID}}: 28391350 [{{https://www.ncbi.nlm.nih.gov/pubmed/28391350]}}},
